<view id="Root" combine.keys="id">
	<component id="Content" combine.keys="id" processor="TableStructureProcessor">
		<properties combine.keys="name">
			<property name="leftSectionAreaStyleClass" value="default-background" />
			<property name="centerSectionAreaStyleClass" value="default-background" />
			<property name="rightSectionAreaStyleClass" value="default-background" />
			<property name="tableStructureAreaStyleClass" value="default-background" />
			<property name="footerAreaSectionStyleClass" value="ep-load-more-footer-area" />
			<property name="tableHeaderAreaStyleClass" value="ep-not-shadowed-table-header" />

			<property name="contentImpl" value="FlowContent" />
		</properties>

			
		<component id="NoContentPane" combine.keys="id">
			<properties combine.keys="name">
				<property name="noContentmessage" value="SELECT_A_FOLDER_MESSAGE" />
			</properties>
		</component>

		<component id="Content" combine.keys="id">
			<properties combine.keys="name">
				<property name="styleClass" value="white-background" />
				<property name="flowContentStyleClass" value="spacing-4,padding-8,white-background" />
				<property name="tableRowStyleClass" value="ep-switchable-flow-item-table-row" />

				<property name="paginateOperation" value="GetFolderChildrenOperation" />
				<property name="getRootFolderOperation" value="GetContainerRootFolderChildren" />
				<property name="dataLoader" value="FolderFlowPaginatedDataLoader" />

				<property name="flowMode" value="vbox" />
				<property name="flowItemImpl" value="FolderSmallSwitchableFlowItemPresenterFactory" />
			</properties>
			<component id="IdentityClickHandler">
				<properties combine.keys="name">
					<property name="action" value="UpdateStructureContentToSelectedFlowModelAction" />
				</properties>
			</component>
		</component>
		
		<component id="Header" combine.keys="id">
			<properties combine.keys="name">
				<property name="headerImpl" value="FolderNavigatorTableHeader" />
				<property name="styleClass" value="white-background" />
				<property name="filtrable" value="false" />
				<property name="structureTitleMode" value="last" />
			</properties>
		</component>
		
		<component id="Toolbar" combine.keys="id">
			<properties combine.keys="name">
				<property name="styleClass" value="ep-folder-navigation-toolbar" />
			</properties>

			<component id="RootMenuActions" combine.keys="id">
				<component id="LeftActions" combine.keys="ref">
					<component ref="GoHomeButton" />
					<component ref="GoBackButton" />
				</component>
			</component>
		</component>
	</component>

	<component id="CellRightActions">
		<properties combine.keys="name">
			<property name="styleClass" value="ep-presenter-right-actions-container" />
			<property name="orientation" value="horizontal" />
		</properties>
		<component id="SelectAction">
			<properties combine.keys="name">
				<property name="title" value="SELECT_LABEL" />
				<property name="upperCase" value="true" />
				<property name="tooltip" value="SELECT_LABEL" />
				<property name="styleClass" value="button,button-primary" />
				<property name="type" value="button" />
				<property name="presenter" value="DoActionPresenter" />
			</properties>
			<component id="Handler" combine.keys="id">
				<properties combine.keys="name">
					<property name="action" value="SelectFolderInputAction" />
				</properties>
			</component>
		</component>
		<component id="LoadChildrenAction">
			<properties combine.keys="name">
				<property name="tooltip" value="CHILDREN_LABEL" />
				<property name="ikonli" value="fa-angle-right:28" />
				<property name="styleClass" value="button-transparent-border" />
				<property name="type" value="button" />
				<property name="presenter" value="DoActionPresenter" />
			</properties>
			<component id="Handler" combine.keys="id">
				<properties combine.keys="name">
					<property name="args" value="operation:GetFolderChildrenOperation;" />
					<property name="action" value="LoadItemChildrenAndUpdateTableAction" />
				</properties>
			</component>
		</component>
	</component>
	
	
	<component id="GoBackButton">
		<properties combine.keys="name">
			<property name="label" value="BACK_LABEL" />
			<property name="styleClass" value="table-toolbar-action" />
			<property name="upperCase" value="true" />
			<property name="ikonli" value="mdi-backup-restore:22" />
			<property name="type" value="SimpleButton" />
			<property name="presenter" value="DoActionPresenter" />
		</properties>
		<component id="Handler">
			<properties combine.keys="name">
				<property name="action" value="LoadPreviousItemChildrenAndUpdateTableAction" />
				<property name="args" value="operation:GetFolderChildrenOperation;relativeToRootModel:false" />
			</properties>
		</component>
	</component>

	<component id="GoHomeButton">
		<properties combine.keys="name">
			<property name="label" value="HOME_LABEL" />
			<property name="styleClass" value="table-toolbar-action" />
			<property name="upperCase" value="true" />
			<property name="ikonli" value="mdi-home-outline:22" />
			<property name="type" value="SimpleButton" />
			<property name="presenter" value="DoActionPresenter" />
		</properties>
		<component id="Handler">
			<properties combine.keys="name">
				<property name="action" value="LoadRootContainerChildrenFolderAndUpdateTableAction" />
				<property name="args" value="operation:GetContainerRootFolderChildren" />
			</properties>
		</component>
	</component>
</view>
