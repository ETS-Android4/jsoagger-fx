<view id="Root" combine.keys="id">

	<!-- USE IN SEARCH FLOW, DISPLAY ADD BUTTON -->
	<component id="LinkObjectToBackingBeanActionButton">
		<properties combine.keys="name">
			<property name="title" value="ADD_LABEL"/>
			<property name="upperCase" value="true"/>
			<property name="styleClass" value="simple-button,button-small,button-transparent-border-transparent"/>
			<property name="type" value="button"/>
			<!-- <property name="ikonli" value="fa-plus:18" /> -->
			<property name="iconStyleClass" value="white-ikonli"/>
			<property name="presenter" value="FlowItemActionPresenter"/>
			<property name="visibilityResolver" value="AddObjectToTableFromSearchAccessRuleResolver"/>
		</properties>

		<component id="Handler">
			<properties combine.keys="name">
				<property name="action" value="CreateTypedObjectLinkFromSearchAction"/>
			</properties>
		</component>
	</component>

	<!-- USE IN SEARCH FLOW, DISPLAY REMOVE BUTTON -->
	<component id="UnLinkObjectToBackingBeanActionButton">
		<properties combine.keys="name">
			<property name="title" value="REMOVE_FROM_STRUCTURE"/>
			<property name="styleClass" value="simple-button,button-small,button-transparent-border-transparent"/>
			<property name="type" value="button"/>
			<property name="upperCase" value="true"/>
			<!-- <property name="ikonli" value="fa-remove:18" /> -->
			<property name="iconStyleClass" value="white-ikonli"/>
			<property name="presenter" value="FlowItemActionPresenter"/>
			<property name="visibilityResolver" value="DeleteObjectFromTableFromSearchAccessRuleResolver"/>
		</properties>

		<component id="Handler">
			<properties combine.keys="name">
				<property name="action" value="DeleteElementUsageFromSearchAction"/>
<!-- 				<property name="action" value="DeleteLinkFromSearchAction"/> -->
			</properties>
		</component>
	</component>
</view>
