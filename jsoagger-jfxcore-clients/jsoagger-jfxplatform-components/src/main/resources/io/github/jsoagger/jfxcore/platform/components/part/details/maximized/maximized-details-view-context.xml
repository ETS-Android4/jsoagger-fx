<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context" xmlns:aop="http://www.springframework.org/schema/aop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd
                http://www.springframework.org/schema/aop
                http://www.springframework.org/schema/aop/spring-aop.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
    default-lazy-init="true" profile="desktop">


    <bean id="ElementMaximizedRootDetailsView" lazy-init="default" class="io.github.jsoagger.jfxcore.engine.controller.detailsview.DetailsViewController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="MaximizedDetailsViewRootLayoutManager" />
        <property name="modelProvider" ref="ReloadRCFromsSCModelLoader" />
		<property name="commonComponents" ref="ElementDetailsViewCommonComponents"/>
        <property name="minimizedDetailsView" value="ElementMinimizedDetailsView" />
        <property name="maximizedDetailsView" value="ElementMaximizedDetailsView" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/ElementDetailsView.xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="IdentityLessElementIterationMaximizedRootDetailsView" lazy-init="default" class="io.github.jsoagger.jfxcore.engine.controller.detailsview.DetailsViewController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="MaximizedDetailsViewRootLayoutManager" />
        <property name="modelProvider" ref="ReloadRCFromsSCModelLoader" />
		<property name="hideIdentity" value="true"/>
        <property name="minimizedDetailsView" value="ElementMinimizedDetailsView" />
        <property name="maximizedDetailsView" value="ElementMaximizedDetailsView" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents"/>
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/ElementDetailsView.xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="ElementMaximizedDetailsView" lazy-init="default" class="io.github.jsoagger.jfxcore.engine.controller.detailsview.layout.MaximizedDetailsViewController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="detailsView" ref="MaximizedDetailsViewImpl" />
        <property name="modelProvider" ref="StructureContentModelReference" />
        <property name="layoutManager" ref="MaximizedDetailsViewLayoutManager" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents"/>
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedDetailsView.xml</value>
            </list>
        </property>
    </bean>
    
    
    
    <!--
        MAXIMIZED DETAILS VIEW MODE, WHEN DETAILS VIEW IS DISPLAYED ALONE
        ROOT MODEL MUST SET BY CALLER IN STRUCTURE CONTENT FORMODEL ATTRIBUTE
    -->
    <bean id="ShowElementMasterDetailsView" lazy-init="default" class="io.github.jsoagger.jfxcore.engine.controller.detailsview.DetailsViewController" scope="prototype">
        <property name="messageSource" ref="ElementMessageSource" />
        <property name="layoutManager" ref="MaximizedDetailsViewRootLayoutManager" />
        <property name="modelProvider" ref="LatestVersionFromStructureContentModelReference" />

        <property name="minimizedDetailsView" value="ElementMinimizedDetailsView" />
        <property name="maximizedDetailsView" value="ElementMaximizedDetailsView" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedDetailsView.xml</value>
            </list>
        </property>
    </bean>

    <bean id="ElementMaximizedDetailsViewImpl" class="io.github.jsoagger.jfxcore.engine.controller.detailsview.layout.MaximizedDetailsView" scope="prototype">
        <property name="header" ref="RCMaximizedDetailsViewHeader" />
<!--         <property name="iconProvider" ref="ModelSoftTypeIconPresenter" /> -->
    </bean>

    <bean id="ElementRCMaximizedDetailsViewHeader" class="io.github.jsoagger.jfxcore.components.rc.RCMaximizedDetailsViewHeader" scope="prototype">
        <property name="presenter" ref="RCDetailsViewHeaderPresenter" />
    </bean>

    <bean id="ElementMaximizedInformationTabView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="FullTabPaneLayoutManager" />
        <property name="modelProvider" ref="StructureContentModelReference" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedInformationTabView.xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="ElementMaximizedVisualisationTabView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="FullTabPaneLayoutManager" />
        <property name="modelProvider" ref="StructureContentModelReference" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedVisualisationTabView.xml</value>
            </list>
        </property>
    </bean>

    <bean id="ElementMaximizedDocumentationTabView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="FullTabPaneLayoutManager" />
        <property name="modelProvider" ref="StructureContentModelReference" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedDocumentationTabView.xml</value>
            </list>
        </property>
    </bean>

    <bean id="ElementMaximizedStructureTabView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
        <property name="messageSource" ref="ElementDetailsViewMessageSource" />
        <property name="layoutManager" ref="FullTabPaneLayoutManager" />
        <property name="modelProvider" ref="StructureContentModelReference" />
        <property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
        <property name="viewDefinitions">
            <list merge="false">
                <value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/MaximizedStructureTabView.xml</value>
            </list>
        </property>
    </bean>

    <bean id="ListDetailsFlowItem" class="io.github.jsoagger.jfxcore.demoapp.comps.ListDetailsFlowItem" scope="prototype">
        <property name="iconPresenter" ref="ModelSoftTypeIconPresenter" />
        <property name="identityPresenter" ref="RCMasterNameIdentityPresenter" />
        <property name="secondaryLabelPresenter" ref="ModelDescriptionPresenter" />
    </bean>

    <!--
        MAXIMIZED: WHEN THE DETAILS VIEW IS DISPLAYED ALONE.
        BECAUSE OF THE FIXED HEADER WHEN MAXIMIZED, THE ROOT LAYOUT HIDE LEFT AND RIGHT PANE
    -->
    <bean id="MaximizedDetailsViewRootLayoutManager" class="io.github.jsoagger.jfxcore.engine.controller.roostructure.layout.FixedLeftRightThreeHPanesViewLayoutManager" scope="prototype">
        <property name="responsiveMatrix" ref="MaximizedDetailsViewRootLayoutManagerMatrix" />
        <property name="verticalScroll" value="false" />
    </bean>

    <bean id="MaximizedDetailsViewRootLayoutManagerMatrix" class="io.github.jsoagger.jfxcore.engine.controller.roostructure.util.ParentResponsiveMatrix" scope="prototype">
        <constructor-arg index="0" ref="MaximizedDetailsViewRootLayoutManagerMatrixDefinition" />
    </bean>

    <util:list id="MaximizedDetailsViewRootLayoutManagerMatrixDefinition" list-class="java.util.ArrayList" value-type="java.lang.String">
        <value>0#0:1:0#hide::hide</value>
    </util:list>

    <bean id="MaximizedDetailsViewLayoutManager" class="io.github.jsoagger.jfxcore.engine.controller.roostructure.layout.MaximizedDetailsViewLayoutManager" scope="prototype">
        <property name="responsiveMatrix" ref="MaximizedDetailsViewLayoutManagerResponsiveMatrix" />
        <property name="verticalScroll" value="true" />
    </bean>

    <bean id="MaximizedDetailsViewLayoutManagerResponsiveMatrix" class="io.github.jsoagger.jfxcore.engine.controller.roostructure.util.ParentResponsiveMatrix" scope="prototype">
        <constructor-arg index="0" ref="MaximizedDetailsViewLayoutManagerResponsiveMatrixDefinition" />
    </bean>

    <util:list id="MaximizedDetailsViewLayoutManagerResponsiveMatrixDefinition" list-class="java.util.ArrayList" value-type="java.lang.String">
        <value>0:900#0.05:0:0.90:0.05#:hide::</value>
        <value>900:1100#0.10:0:0.80:0.10#:hide::</value>
        <value>1100#0.50:0:fixed|800:0.50#:hide::</value>
    </util:list>
    
    <bean id="ElementMaquette2DContentView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
		<property name="messageSource" ref="ElementDetailsViewMessageSource" />
		<property name="modelProvider" ref="StructureContentModelReference" />
		<property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
		<property name="viewDefinitions">
			<list merge="false">
				<value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/ElementMaquette2DContentView.xml</value>
			</list>
		</property>
	</bean>

	<bean id="ElementMaquette3DContentView" class="io.github.jsoagger.jfxcore.engine.controller.main.StandardController" scope="prototype">
		<property name="messageSource" ref="ElementDetailsViewMessageSource" />
		<property name="modelProvider" ref="StructureContentModelReference" />
		<property name="commonComponents" ref="ElementDetailsViewCommonComponents" />
		<property name="viewDefinitions">
			<list merge="false">
				<value>/io/github/jsoagger/jfxcore/platform/components/part/details/maximized/ElementMaquette3DContentView.xml</value>
			</list>
		</property>
	</bean>
</beans>
