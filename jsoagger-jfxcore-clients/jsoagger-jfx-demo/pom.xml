						<version>${ikonli.kordamp.version}</version>
					</dependency>
				</dependencies>
			</dependencyManagement>
			<dependencies>
				<dependency>
					<groupId>io.github.jsoagger</groupId>
					<artifactId>jsoagger-jfxcore11</artifactId>
					<version>1.0.2-SNAPSHOT</version>
				</dependency>
				<dependency>
